            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/mealplan_top_app_bar"
            app:navigationIcon="@drawable/ic_close_24"
            app:title="Add a Meal"
            tools:ignore="RtlSymmetry"
            tools:layout_conversion_absoluteHeight="56dp"
