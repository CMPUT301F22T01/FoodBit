<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoodBit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:actionBarStyle"></item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodBit.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!--        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">?attr/colorAccent</item>-->
        <!--        <item name="colorPrimary">?attr/colorPrimary</item>-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="actionMenuTextColor">?attr/colorAccent</item>-->
    </style>

    <style name="Theme.FoodBit.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_down_exit</item>
    </style>

    <style name="Theme.FoodBit.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryLightColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="startIconTint">@color/primaryColor</item>
    </style>

    <style name="Theme.FoodBit.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/primaryLightColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="startIconTint">@color/primaryColor</item>
    </style>

    <style name="Theme.FoodBit.ExpandedTitleTextAppearance" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.FoodBit.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!--    <style name="Theme.FoodBit.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <!--        <item name=""-->
    <!--    </style>-->

</resources>